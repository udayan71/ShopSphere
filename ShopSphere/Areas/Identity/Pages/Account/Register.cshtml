@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<!-- Google Fonts -->
<link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600&display=swap" rel="stylesheet">
<!-- FontAwesome for Social Icons -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

<style>
    :root {
        --bg-color: #ffffff;
        --text-main: #333333;
        --input-border: #e2e8f0;
        --button-blue: #4a86e8;
        --link-blue: #5b9bd5;
    }

    body {
        background-color: var(--bg-color);
        font-family: 'Inter', sans-serif;
        margin: 0;
        padding: 0;
        color: var(--text-main);
    }

    .main-container {
        min-height: 100vh;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        padding: 40px 20px; /* Extra padding for mobile scroll */
        background-color: var(--bg-color);
    }

    .register-box {
        width: 100%;
        max-width: 420px;
        text-align: center;
    }

    .logo-container img {
        width: 200px;
        height: auto;
        margin-bottom: 1rem;
    }

    .welcome-text {
        font-size: 1.8rem;
        font-weight: 600;
        color: #2d3748;
        margin-bottom: 0.5rem;
    }

    .sub-text {
        color: #718096;
        margin-bottom: 2rem;
        font-size: 0.95rem;
    }

    .form-control {
        height: 50px;
        border-radius: 8px;
        border: 1px solid var(--input-border);
        padding: 10px 18px;
        font-size: 1rem;
        margin-bottom: 1rem;
        background-color: #ffffff;
        box-shadow: none !important;
        transition: border-color 0.2s;
    }

        .form-control:focus {
            border-color: var(--link-blue);
        }

        .form-control::placeholder {
            color: #a0aec0;
        }

    .btn-register {
        background-color: var(--button-blue);
        border: none;
        color: white;
        padding: 14px;
        font-size: 1.1rem;
        font-weight: 600;
        border-radius: 8px;
        width: 100%;
        margin-top: 1rem;
        cursor: pointer;
        transition: background 0.2s, transform 0.1s;
    }

        .btn-register:hover {
            background-color: #3b71ca;
            color: white;
        }

    .login-link {
        display: inline-block;
        margin-top: 20px;
        color: var(--link-blue);
        text-decoration: none;
        font-size: 0.95rem;
        font-weight: 500;
    }

        .login-link:hover {
            text-decoration: underline;
        }

    /* Footer Styles */
    .page-footer {
        position: relative; /* Relative here so it doesn't overlap long forms on mobile */
        margin-top: 50px;
        width: 100%;
        border-top: 1px solid #edf2f7;
        background: white;
        padding: 20px 0;
    }

    .footer-content {
        max-width: 900px;
        margin: 0 auto;
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 0 30px;
    }

    .footer-links a {
        color: var(--link-blue);
        text-decoration: none;
        font-size: 0.9rem;
        margin-right: 25px;
    }

    .social-icons a {
        color: #cbd5e0;
        margin-left: 20px;
        font-size: 1.2rem;
    }
</style>

<div class="main-container">
    <div class="register-box">
        <!-- Logo -->
        <div class="logo-container">
            <img src="~/images/ShopSphere.png" alt="ShopSphere Logo" />
        </div>

        <h2 class="welcome-text">Create Account</h2>
        <p class="sub-text">Join ShopSphere today</p>

        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger small mb-3" role="alert"></div>

            <!-- Full Name -->
            <input asp-for="Input.FullName" class="form-control" placeholder="Full Name" required />
            <span asp-validation-for="Input.FullName" class="text-danger small d-block text-start mb-2"></span>

            <!-- Email -->
            <input asp-for="Input.Email" class="form-control" placeholder="Email Address" required />
            <span asp-validation-for="Input.Email" class="text-danger small d-block text-start mb-2"></span>

            <!-- Password -->
            <input asp-for="Input.Password" type="password" class="form-control" placeholder="Password" required />
            <span asp-validation-for="Input.Password" class="text-danger small d-block text-start mb-2"></span>

            <!-- Confirm Password -->
            <input asp-for="Input.ConfirmPassword" type="password" class="form-control" placeholder="Confirm Password" required />
            <span asp-validation-for="Input.ConfirmPassword" class="text-danger small d-block text-start mb-2"></span>

            <button id="registerSubmit" type="submit" class="btn btn-register">Register</button>

            <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl" class="login-link">Already have an account? Log In</a>
        </form>
    </div>
</div>

<footer class="page-footer">
    <div class="footer-content">
        <div class="footer-links">
            <a href="#">Privacy Policy</a>
            <a href="#">Terms of Service</a>
        </div>
        <div class="social-icons">
            <a href="#"><i class="fab fa-facebook-f"></i></a>
            <a href="#"><i class="fab fa-youtube"></i></a>
        </div>
    </div>
</footer>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}