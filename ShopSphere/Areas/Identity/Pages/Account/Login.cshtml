@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<!-- Google Fonts -->
<link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600&display=swap" rel="stylesheet">
<!-- FontAwesome for Social Icons -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

<style>
    :root {
        /* Matching the logo's pure white background */
        --bg-color: #ffffff;
        --text-main: #333333;
        --input-border: #e2e8f0;
        --button-blue: #4a86e8;
        --link-blue: #5b9bd5;
    }

    body {
        background-color: var(--bg-color);
        font-family: 'Inter', sans-serif;
        margin: 0;
        padding: 0;
        color: var(--text-main);
    }

    .main-container {
        min-height: 100vh;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        padding: 20px;
        background-color: var(--bg-color); /* Ensures full screen match */
    }

    .login-box {
        width: 100%;
        max-width: 420px;
        text-align: center;
    }

    .logo-container img {
        width: 220px; /* Adjusted to match original scale */
        height: auto;
        margin-bottom: 1.5rem;
        /* No border or shadow here so it blends with the white background */
    }

    .welcome-text {
        font-size: 1.8rem;
        font-weight: 600;
        color: #2d3748;
        margin-bottom: 2.5rem;
    }

    .form-control {
        height: 50px;
        border-radius: 8px;
        border: 1px solid var(--input-border);
        padding: 10px 18px;
        font-size: 1rem;
        margin-bottom: 1.2rem;
        background-color: #ffffff;
        box-shadow: none !important;
        transition: border-color 0.2s;
    }

        .form-control:focus {
            border-color: var(--link-blue);
        }

        .form-control::placeholder {
            color: #a0aec0;
        }

    .btn-login {
        background-color: var(--button-blue);
        border: none;
        color: white;
        padding: 14px;
        font-size: 1.1rem;
        font-weight: 600;
        border-radius: 8px;
        width: 100%;
        margin-top: 0.5rem;
        cursor: pointer;
        transition: background 0.2s, transform 0.1s;
    }

        .btn-login:hover {
            background-color: #3b71ca;
            color: white;
        }

        .btn-login:active {
            transform: scale(0.98);
        }

    .forgot-link {
        display: inline-block;
        margin-top: 20px;
        color: var(--link-blue);
        text-decoration: none;
        font-size: 0.95rem;
        font-weight: 500;
    }

        .forgot-link:hover {
            text-decoration: underline;
        }

    /* Footer Styles */
    .page-footer {
        position: fixed;
        bottom: 0;
        width: 100%;
        border-top: 1px solid #edf2f7;
        background: white;
        padding: 18px 0;
    }

    .footer-content {
        max-width: 900px;
        margin: 0 auto;
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 0 30px;
    }

    .footer-links a {
        color: var(--link-blue);
        text-decoration: none;
        font-size: 0.9rem;
        margin-right: 25px;
    }

    .social-icons a {
        color: #cbd5e0;
        margin-left: 20px;
        font-size: 1.2rem;
        transition: color 0.2s;
    }

        .social-icons a:hover {
            color: #4a5568;
        }
</style>

<div class="main-container">
    <div class="login-box">
        <!-- Logo Section - Blends with white background -->
        <div class="logo-container">
            <img src="~/images/ShopSphere.png" alt="ShopSphere Logo" />
        </div>

        <h2 class="welcome-text">Welcome to ShopSphere</h2>

        <form id="account" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger small mb-3" role="alert"></div>

            <input asp-for="Input.Email" class="form-control" placeholder="Username" required />
            <span asp-validation-for="Input.Email" class="text-danger small d-block text-start"></span>

            <input asp-for="Input.Password" type="password" class="form-control" placeholder="Password" required />
            <span asp-validation-for="Input.Password" class="text-danger small d-block text-start"></span>

            <button id="login-submit" type="submit" class="btn btn-login">Log In</button>

            <a id="forgot-password" asp-page="./ForgotPassword" class="forgot-link">Forgot Password?</a>
        </form>
    </div>
</div>

<footer class="page-footer">
    <div class="footer-content">
        <div class="footer-links">
            <a href="#">Privacy Policy</a>
            <a href="#">Terms of Service</a>
        </div>
        <div class="social-icons">
            <a href="#"><i class="fab fa-facebook-f"></i></a>
            <a href="#"><i class="fab fa-youtube"></i></a>
        </div>
    </div>
</footer>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}