@model IEnumerable<ShopSphere.Domain.Models.Product>

@{
    ViewData["Title"] = "All Products";
    var categories = ViewBag.Categories as IEnumerable<ShopSphere.Domain.Models.Category> ?? Enumerable.Empty<ShopSphere.Domain.Models.Category>();
    var currentCategoryId = ViewBag.CurrentCategoryId as int?;
}


<!-- Category filter -->
<div class="container py-3">
    <div class="d-flex align-items-center mb-3">
        <a asp-controller="Products" asp-action="Index" class="btn btn-sm btn-outline-secondary me-2 @(currentCategoryId == null ? "active" : "")">All</a>
        @foreach (var cat in categories)
        {
            <a asp-controller="Products" asp-action="Index" asp-route-categoryId="@cat.CategoryId"
               class="btn btn-sm btn-outline-secondary me-2 @(currentCategoryId == cat.CategoryId ? "active" : "")">
                @cat.Name
            </a>
        }
    </div>
</div>

<!-- Google Fonts & Icons -->
<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

<style>
    :root {
        --ss-primary: #4a86e8;
        --ss-text-main: #1e293b;
        --ss-text-muted: #64748b;
        --ss-bg: #ffffff;
    }

    body {
        background-color: #f8fafc;
        font-family: 'Inter', sans-serif;
    }

    .page-title {
        font-weight: 700;
        color: var(--ss-text-main);
        letter-spacing: -0.5px;
        margin-bottom: 2rem;
    }

    /* Card Styling */
    .product-link {
        text-decoration: none !important;
        color: inherit;
        display: block;
        height: 100%;
    }

    .product-card {
        background: #ffffff;
        border: 1px solid #e2e8f0;
        border-radius: 12px;
        overflow: hidden;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        height: 100%;
        display: flex;
        flex-direction: column;
    }

        .product-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 12px 20px -5px rgba(0, 0, 0, 0.1);
            border-color: var(--ss-primary);
        }

    .image-container {
        position: relative;
        width: 100%;
        padding-top: 100%; /* 1:1 Aspect Ratio */
        background-color: #f1f5f9;
        overflow: hidden;
    }

    .product-image {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.5s ease;
    }

    .product-card:hover .product-image {
        transform: scale(1.08);
    }

    .card-content {
        padding: 1.25rem;
        flex-grow: 1;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
    }

    .product-name {
        font-size: 0.95rem;
        font-weight: 500;
        color: var(--ss-text-main);
        margin-bottom: 0.5rem;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
        height: 2.8rem; /* Keeps alignment consistent */
    }

    .price-container {
        display: flex;
        align-items: center;
        justify-content: space-between;
        margin-top: auto;
    }

    .product-price {
        font-size: 1.15rem;
        font-weight: 700;
        color: var(--ss-primary);
    }

    .btn-view {
        font-size: 0.75rem;
        font-weight: 600;
        text-transform: uppercase;
        color: var(--ss-text-muted);
        letter-spacing: 0.5px;
    }

    /* Empty State */
    .empty-catalog {
        text-align: center;
        padding: 5rem 1rem;
        color: var(--ss-text-muted);
    }
</style>

<div class="container py-4">
    <h2 class="page-title">Explore Our Collection</h2>

    <div class="row g-4">
        @if (Model == null || !Model.Any())
        {
            <div class="col-12 empty-catalog">
                <i class="fas fa-search fa-3x mb-3 opacity-20"></i>
                <h3>No products found</h3>
                <p>We couldn't find any products matching your request.</p>
            </div>
        }
        else
        {
            @foreach (var product in Model)
            {
                <div class="col-6 col-md-4 col-lg-3">
                    <a asp-controller="Products"
                       asp-action="Details"
                       asp-route-id="@product.ProductId"
                       class="product-link">

                        <div class="product-card">
                            <!-- Image Section with safety check -->
                            <div class="image-container">
                                @if (product.Images != null && product.Images.Any() && !string.IsNullOrEmpty(product.Images.First().ImagePath))
                                {
                                    <img src="@product.Images.First().ImagePath"
                                         class="product-image"
                                         alt="@product.Name"
                                         loading="lazy" />
                                }
                                else
                                {
                                    <div class="d-flex align-items-center justify-content-center h-100 text-muted">
                                        <i class="fas fa-image fa-2x opacity-25"></i>
                                    </div>
                                }
                            </div>

                            <!-- Content Section -->
                            <div class="card-content">
                                <h6 class="product-name">@(product.Name ?? "Unnamed Product")</h6>

                                <div class="price-container">
                                    <span class="product-price">₹@product.Price.ToString("N0")</span>
                                    <span class="btn-view">Details <i class="fas fa-arrow-right ms-1"></i></span>
                                </div>
                            </div>
                        </div>
                    </a>
                </div>
            }
        }
    </div>
</div>