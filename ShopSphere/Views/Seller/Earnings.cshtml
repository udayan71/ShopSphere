@model SellerEarningsDashboardViewModel

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold text-dark mb-1">Financial Overview</h2>
            <p class="text-muted small">Track your sales performance and net earnings</p>
        </div>
        <button class="btn btn-outline-primary btn-sm rounded-pill px-3">
            <i class="fas fa-download me-1"></i> Export Report
        </button>
    </div>

    <!-- Summary Cards -->
    <div class="row g-4 mb-5">
        <div class="col-md-3">
            <div class="card border-0 shadow-sm h-100 stat-card">
                <div class="card-body">
                    <div class="d-flex align-items-center mb-3">
                        <div class="stat-icon bg-soft-primary text-primary me-3">
                            <i class="fas fa-shopping-cart"></i>
                        </div>
                        <h6 class="text-muted mb-0">Total Orders</h6>
                    </div>
                    <h3 class="fw-bold mb-0">@Model.Summary.TotalOrders</h3>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card border-0 shadow-sm h-100 stat-card">
                <div class="card-body">
                    <div class="d-flex align-items-center mb-3">
                        <div class="stat-icon bg-soft-info text-info me-3">
                            <i class="fas fa-chart-line"></i>
                        </div>
                        <h6 class="text-muted mb-0">Gross Revenue</h6>
                    </div>
                    <h3 class="fw-bold mb-0">₹ @Model.Summary.TotalRevenue.ToString("N2")</h3>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card border-0 shadow-sm h-100 stat-card">
                <div class="card-body">
                    <div class="d-flex align-items-center mb-3">
                        <div class="stat-icon bg-soft-danger text-danger me-3">
                            <i class="fas fa-percentage"></i>
                        </div>
                        <h6 class="text-muted mb-0">Commission</h6>
                    </div>
                    <h3 class="fw-bold mb-0">₹ @Model.Summary.TotalCommission.ToString("N2")</h3>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card border-0 shadow-lg h-100 stat-card bg-brand-blue text-white">
                <div class="card-body">
                    <div class="d-flex align-items-center mb-3">
                        <div class="stat-icon bg-white-transparent text-white me-3">
                            <i class="fas fa-wallet"></i>
                        </div>
                        <h6 class="text-white-50 mb-0">Net Earnings</h6>
                    </div>
                    <h3 class="fw-bold mb-0">₹ @Model.Summary.TotalEarnings.ToString("N2")</h3>
                </div>
            </div>
        </div>
    </div>

    <!-- Details Table -->
    <div class="card border-0 shadow-sm overflow-hidden">
        <div class="card-header bg-white py-3">
            <h5 class="fw-bold mb-0">Earnings Breakdown</h5>
        </div>
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light">
                    <tr>
                        <th class="ps-4 py-3 text-uppercase fs-xs fw-bold text-secondary">Transaction</th>
                        <th class="py-3 text-uppercase fs-xs fw-bold text-secondary text-center">Qty</th>
                        <th class="py-3 text-uppercase fs-xs fw-bold text-secondary">Price</th>
                        <th class="py-3 text-uppercase fs-xs fw-bold text-secondary text-danger">Comm.</th>
                        <th class="py-3 text-uppercase fs-xs fw-bold text-dark">Your Share</th>
                        <th class="py-3 text-uppercase fs-xs fw-bold text-secondary pe-4 text-end">Date</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Earnings)
                    {
                        <tr>
                            <td class="ps-4">
                                <div class="d-flex flex-column">
                                    <span class="fw-bold text-dark">Item #@item.OrderItemId</span>
                                    <small class="text-muted">Product ID: @item.ProductId</small>
                                </div>
                            </td>
                            <td class="text-center">
                                <span class="badge bg-light text-dark border">x @item.Quantity</span>
                            </td>
                            <td>₹ @item.Price.ToString("N2")</td>
                            <td>
                                <span class="text-danger small">-₹ @item.CommissionAmount</span>
                            </td>
                            <td>
                                <span class="fw-bold text-success">₹ @item.SellerAmount</span>
                            </td>
                            <td class="pe-4 text-end">
                                <span class="text-muted small">@item.CreatedDate.ToString("MMM dd, yyyy")</span>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<style>
    /* Dashboard Variables */
    :root {
        --brand-blue: #4A86E8;
    }

    .bg-brand-blue {
        background-color: var(--brand-blue) !important;
    }

    /* Card Styling */
    .stat-card {
        transition: transform 0.2s ease;
        border-radius: 15px;
    }

        .stat-card:hover {
            transform: translateY(-5px);
        }

    .stat-icon {
        width: 48px;
        height: 48px;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.25rem;
    }

    /* Soft Color Utility */
    .bg-soft-primary {
        background-color: #eef2ff;
    }

    .bg-soft-info {
        background-color: #e0f2fe;
    }

    .bg-soft-danger {
        background-color: #fef2f2;
    }

    .bg-white-transparent {
        background-color: rgba(255, 255, 255, 0.2);
    }

    /* Table Typography */
    .fs-xs {
        font-size: 0.75rem;
    }

    .table thead th {
        border: none;
        letter-spacing: 0.05em;
    }

    .table tbody td {
        border-bottom: 1px solid #f1f5f9;
        padding: 1rem 0.5rem;
    }
</style>