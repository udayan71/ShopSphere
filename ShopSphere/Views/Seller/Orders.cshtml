@using ShopSphere.Domain.Enums
@model IEnumerable<ShopSphere.Domain.Models.OrderItem>

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-dark mb-0">My Orders</h2>
        <span class="badge bg-light text-dark border shadow-sm">Total Items: @Model.Count()</span>
    </div>

    @if (!Model.Any())
    {
        <div class="card shadow-sm border-0 text-center py-5">
            <div class="card-body">
                <i class="fas fa-box-open fa-3x text-muted mb-3"></i>
                <h4 class="text-muted">No orders available yet.</h4>
                <p class="text-secondary">When customers buy your products, they will appear here.</p>
            </div>
        </div>
    }
    else
    {
        <div class="card shadow-sm border-0 overflow-hidden">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th class="ps-4 py-3 text-uppercase fs-xs fw-bold text-secondary">Order Details</th>
                            <th class="py-3 text-uppercase fs-xs fw-bold text-secondary">Quantity</th>
                            <th class="py-3 text-uppercase fs-xs fw-bold text-secondary">Price</th>
                            <th class="py-3 text-uppercase fs-xs fw-bold text-secondary text-center">Status</th>
                            <th class="py-3 text-uppercase fs-xs fw-bold text-secondary text-end pe-4">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            var status = (OrderStatus)item.Status;
                            <tr>
                                <td class="ps-4">
                                    <div class="d-flex flex-column">
                                        <span class="fw-bold text-dark">Order #@item.OrderId</span>
                                        <small class="text-muted">Product ID: @item.ProductId</small>
                                    </div>
                                </td>
                                <td>
                                    <span class="fw-semibold">@item.Quantity</span>
                                </td>
                                <td>
                                    <span class="fw-bold text-dark">₹ @item.Price.ToString("N2")</span>
                                </td>
                                <td class="text-center">
                                    @{
                                        var badgeClass = status switch
                                        {
                                            OrderStatus.Pending => "bg-soft-warning text-warning",
                                            OrderStatus.ReadyForPickup => "bg-soft-info text-info",
                                            OrderStatus.Shipped => "bg-soft-primary text-primary",
                                            OrderStatus.OutForDelivery => "bg-soft-secondary text-secondary",
                                            OrderStatus.Delivered => "bg-soft-success text-success",
                                            _ => "bg-soft-danger text-danger"
                                        };
                                    }
                                    <span class="badge rounded-pill px-3 py-2 @badgeClass">
                                        <i class="fas fa-circle me-1 small"></i> @status
                                    </span>
                                </td>
                                <td class="text-end pe-4">
                                    @if (status == OrderStatus.Pending)
                                    {
                                        <form asp-action="MarkReady" method="post" class="d-inline">
                                            <input type="hidden" name="orderItemId" value="@item.OrderItemId" />
                                            <button type="submit" class="btn btn-sm btn-action-ready shadow-sm">
                                                <i class="fas fa-check me-1"></i> Mark Ready
                                            </button>
                                        </form>
                                    }
                                    else
                                    {
                                        <span class="badge bg-light text-muted border-0 fw-normal">
                                            <i class="fas fa-clock me-1"></i> Awaiting Admin
                                        </span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>

<style>
    /* Modern "Soft" Badges */
    .bg-soft-warning {
        background-color: #fff3cd;
        color: #856404;
    }

    .bg-soft-info {
        background-color: #d1ecf1;
        color: #0c5460;
    }

    .bg-soft-primary {
        background-color: #cfe2ff;
        color: #084298;
    }

    .bg-soft-secondary {
        background-color: #e2e3e5;
        color: #41464b;
    }

    .bg-soft-success {
        background-color: #d1e7dd;
        color: #0f5132;
    }

    .bg-soft-danger {
        background-color: #f8d7da;
        color: #842029;
    }

    /* Custom Action Button - Matching your blue aesthetic */
    .btn-action-ready {
        background-color: #4A86E8;
        color: white;
        border-radius: 8px;
        font-weight: 600;
        transition: all 0.2s;
        border: none;
        padding: 6px 15px;
    }

        .btn-action-ready:hover {
            background-color: #357ABD;
            color: white;
            transform: translateY(-1px);
        }

    /* Table styling */
    .fs-xs {
        font-size: 0.75rem;
    }

    .table thead th {
        border-bottom: 1px solid #edf2f9;
    }

    .table tbody td {
        border-bottom: 1px solid #edf2f9;
    }
</style>