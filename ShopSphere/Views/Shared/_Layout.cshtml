@using Microsoft.AspNetCore.Identity
@using ShopSphere.BLL
@using ShopSphere.Domain.Models
@using ShopSphere.Identity
@inject ISellerService SellerService
@inject UserManager<ApplicationUser> UserManager


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ShopSphere</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">ShopSphere</a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                        data-bs-target="#navbarContent">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarContent">

                    <!-- LEFT SIDE -->
                    <ul class="navbar-nav me-auto">

                        

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Products" asp-action="Index">
                                Home
                            </a>
                        </li>


                        @if (User.IsInRole("Customer"))
                        {
                            <li class="nav-item">
                                <a class="nav-link"
                                   asp-controller="Cart"
                                   asp-action="Index">
                                    Cart
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link"
                                   asp-controller="Order"
                                   asp-action="MyOrders">
                                    My Orders
                                </a>
                            </li>
                        }


                        @if (User.IsInRole("Seller"))
                        {
                            <li class="nav-item">
                                <a class="nav-link"
                                   asp-controller="Seller"
                                   asp-action="AddProduct">
                                    Add Product
                                </a>
                            </li>
                        }

                        @if (User.IsInRole("Seller"))
                        {
                            <li class="nav-item">
                                <a class="nav-link"
                                asp-controller="Seller"
                                asp-action="Dashboard">
                                Applied Product
                            </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link"
                                   asp-controller="Seller"
                                   asp-action="Orders">
                                    Track Orders
                                </a>
                            </li>
                        }

                        @if (User.Identity.IsAuthenticated
                                                && !User.IsInRole("Seller")
                                                && !User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link"
                                   asp-controller="Seller"
                                   asp-action="BecomeSeller">
                                    Become a Seller
                                </a>
                            </li>
                        }


                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link"
                                    asp-controller="Admin" 
                                    asp-action="Index">
                                    Seller Approvals
                                </a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link"
                                   asp-controller="Admin"
                                   asp-action="ProductApprovals">
                                    Product Approvals
                                </a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link"
                                   asp-controller="Admin"
                                   asp-action="Orders">
                                    Track Orders
                                </a>
                            </li>
                        }
                        


                    </ul>


                    <!-- RIGHT SIDE -->
                    <ul class="navbar-nav">
                        @if (User.Identity.IsAuthenticated)
                        {
                            
                            <li class="nav-item">
                                <form method="post" asp-area="Identity" asp-page="/Account/Logout">
                                    <button type="submit" class="btn btn-link nav-link">
                                        Logout
                                    </button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="Identity" asp-page="/Account/Register">
                                    Register
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="Identity" asp-page="/Account/Login">
                                    Login
                                </a>
                            </li>
                        }
                    </ul>

                </div>

            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2026 - ShopSphere
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
