@model ShopSphere.ViewModels.AdminDashboardViewModel

<div class="container-fluid py-4">
    <!-- Header Section -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold text-dark mb-1">Admin Dashboard</h2>
            <p class="text-muted small">Platform performance and financial overview</p>
        </div>
        <div class="d-flex gap-2">
            <button class="btn btn-white border shadow-sm btn-sm">
                <i class="fas fa-calendar-alt me-1"></i> Today
            </button>
            <button class="btn btn-admin-blue btn-sm px-3 shadow-sm text-white">
                <i class="fas fa-sync-alt me-1"></i> Refresh Data
            </button>
        </div>
    </div>

    <!-- Stats Row -->
    <div class="row g-4">
        <!-- Total Revenue Card (Primary Focus) -->
        <div class="col-md-4">
            <div class="card border-0 shadow-lg bg-admin-gradient text-white h-100 stat-card">
                <div class="card-body p-4">
                    <div class="d-flex justify-content-between align-items-start mb-3">
                        <div>
                            <h6 class="text-white-50 text-uppercase fw-bold mb-1 small">Total Platform Revenue</h6>
                            <h2 class="fw-bold mb-0">₹ @Model.TotalRevenue.ToString("N2")</h2>
                        </div>
                        <div class="stat-icon-admin bg-white-transparent">
                            <i class="fas fa-chart-line"></i>
                        </div>
                    </div>
                    <div class="mt-3 small">
                        <span class="badge bg-white-transparent text-white">
                            <i class="fas fa-arrow-up me-1"></i> Gross Volume
                        </span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Commission Card (Success Metric) -->
        <div class="col-md-4">
            <div class="card border-0 shadow-sm h-100 stat-card">
                <div class="card-body p-4">
                    <div class="d-flex justify-content-between align-items-start mb-3">
                        <div>
                            <h6 class="text-muted text-uppercase fw-bold mb-1 small">Total Commission Earned</h6>
                            <h2 class="fw-bold text-success mb-0">₹ @Model.TotalCommission.ToString("N2")</h2>
                        </div>
                        <div class="stat-icon-admin bg-soft-success text-success">
                            <i class="fas fa-hand-holding-usd"></i>
                        </div>
                    </div>
                    <div class="mt-3 small text-muted">
                        <i class="fas fa-info-circle me-1"></i> Net profit for platform
                    </div>
                </div>
            </div>
        </div>

        <!-- Orders Card (Operational Metric) -->
        <div class="col-md-4">
            <div class="card border-0 shadow-sm h-100 stat-card">
                <div class="card-body p-4">
                    <div class="d-flex justify-content-between align-items-start mb-3">
                        <div>
                            <h6 class="text-muted text-uppercase fw-bold mb-1 small">Delivered Orders</h6>
                            <h2 class="fw-bold text-dark mb-0">@Model.DeliveredOrders</h2>
                        </div>
                        <div class="stat-icon-admin bg-soft-info text-info">
                            <i class="fas fa-truck-check"></i>
                        </div>
                    </div>
                    <div class="mt-3 small text-muted">
                        <i class="fas fa-check-circle text-success me-1"></i> Successful fulfillment
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    :root {
        --brand-blue: #4A86E8;
        --brand-blue-dark: #357ABD;
    }

    /* Admin Specific Styling */
    .bg-admin-gradient {
        background: linear-gradient(135deg, var(--brand-blue) 0%, var(--brand-blue-dark) 100%);
    }

    .btn-admin-blue {
        background-color: var(--brand-blue);
        border: none;
        transition: 0.3s;
    }

        .btn-admin-blue:hover {
            background-color: var(--brand-blue-dark);
            transform: translateY(-1px);
        }

    /* Card Styling */
    .stat-card {
        border-radius: 16px;
        transition: all 0.3s ease;
    }

        .stat-card:hover {
            transform: translateY(-5px);
        }

    .stat-icon-admin {
        width: 54px;
        height: 54px;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.5rem;
    }

    /* Color Utilities */
    .bg-white-transparent {
        background-color: rgba(255, 255, 255, 0.2);
    }

    .bg-soft-success {
        background-color: #ecfdf5;
    }

    .bg-soft-info {
        background-color: #e0f2fe;
    }

    .btn-white {
        background-color: white;
        color: #4b5563;
    }

    /* Font weight tweaks */
    h2 {
        letter-spacing: -0.5px;
    }

    h6 {
        letter-spacing: 0.5px;
    }
</style>