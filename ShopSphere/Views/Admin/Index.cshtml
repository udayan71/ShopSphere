@model IEnumerable<ShopSphere.Domain.Models.Seller>

<div class="container-fluid py-4">
    <!-- Header Section -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold text-dark mb-1">Seller Applications</h2>
            <p class="text-muted small">Review and manage vendor onboarding requests</p>
        </div>
        <span class="badge bg-soft-primary text-primary px-3 py-2 border border-primary-subtle">
            <i class="fas fa-clipboard-list me-1"></i> Total Applications: @Model.Count()
        </span>
    </div>

    @if (!Model.Any())
    {
        <div class="card shadow-sm border-0 text-center py-5">
            <div class="card-body">
                <i class="fas fa-user-check fa-3x text-light-gray mb-3"></i>
                <h4 class="text-muted">No pending applications found.</h4>
            </div>
        </div>
    }
    else
    {
        <div class="card shadow-sm border-0 overflow-hidden">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th class="ps-4 py-3 text-uppercase fs-xs fw-bold text-secondary">Business Information</th>
                            <th class="py-3 text-uppercase fs-xs fw-bold text-secondary">Contact</th>
                            <th class="py-3 text-uppercase fs-xs fw-bold text-secondary text-center">Status</th>
                            <th class="py-3 text-uppercase fs-xs fw-bold text-secondary text-end pe-4">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var seller in Model)
                        {
                            <tr>
                                <td class="ps-4">
                                    <div class="d-flex flex-column">
                                        <span class="fw-bold text-dark">@seller.BusinessName</span>
                                        <small class="text-muted">GST: <span class="fw-semibold">@seller.GSTNumber</span></small>
                                    </div>
                                </td>
                                <td>
                                    <div class="d-flex align-items-center text-secondary">
                                        <i class="fas fa-phone-alt me-2 small"></i> @seller.PhoneNumber
                                    </div>
                                </td>
                                <td class="text-center">
                                    @{
                                        var statusClass = seller.Status == "Pending" ? "bg-soft-warning text-warning" :
                                        seller.Status == "Approved" ? "bg-soft-success text-success" :
                                        "bg-soft-danger text-danger";
                                    }
                                    <span class="badge rounded-pill px-3 py-2 @statusClass">
                                        <i class="fas fa-circle me-1 small"></i> @seller.Status
                                    </span>
                                </td>
                                <td class="text-end pe-4">
                                    @if (seller.Status == "Pending")
                                    {
                                        <div class="btn-group shadow-sm">
                                            <a asp-action="ApproveSeller"
                                               asp-route-sellerId="@seller.SellerId"
                                               class="btn btn-sm btn-success px-3">
                                                <i class="fas fa-check me-1"></i> Approve
                                            </a>

                                            <button class="btn btn-sm btn-outline-danger px-3"
                                                    data-bs-toggle="modal"
                                                    data-bs-target="#rejectModal-@seller.SellerId">
                                                <i class="fas fa-times me-1"></i> Reject
                                            </button>
                                        </div>

                                        <!-- Reject Modal -->
                                        <div class="modal fade" id="rejectModal-@seller.SellerId" tabindex="-1" aria-hidden="true">
                                            <div class="modal-dialog modal-dialog-centered">
                                                <div class="modal-content border-0 shadow-lg">
                                                    <form asp-action="RejectSeller" method="post">
                                                        <div class="modal-header bg-danger text-white border-0">
                                                            <h5 class="modal-title fw-bold">Reject Application</h5>
                                                            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                                                        </div>
                                                        <div class="modal-body p-4 text-start">
                                                            <p class="text-secondary">Provide a reason for rejecting <strong>@seller.BusinessName</strong>. This will be visible to the applicant.</p>
                                                            <input type="hidden" name="sellerId" value="@seller.SellerId" />
                                                            <textarea name="reason"
                                                          class="form-control border-danger-subtle"
                                                          rows="4"
                                                          placeholder="e.g., Invalid GST documents or incorrect phone number..."
                                                          required></textarea>
                                                        </div>
                                                        <div class="modal-footer border-0 bg-light p-3">
                                                            <button type="button" class="btn btn-secondary px-4" data-bs-dismiss="modal">Cancel</button>
                                                            <button type="submit" class="btn btn-danger px-4 fw-bold">Confirm Rejection</button>
                                                        </div>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                    else
                                    {
                                        <span class="text-muted small italic">No actions available</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>

<style>
    /* Admin/Dashboard UI Variables */
    :root {
        --brand-blue: #4A86E8;
    }

    /* Soft Color Badges */
    .bg-soft-primary {
        background-color: #eef2ff;
        color: var(--brand-blue);
    }

    .bg-soft-warning {
        background-color: #fffbeb;
        color: #d97706;
    }

    .bg-soft-success {
        background-color: #ecfdf5;
        color: #059669;
    }

    .bg-soft-danger {
        background-color: #fef2f2;
        color: #dc2626;
    }

    /* Table Styles */
    .fs-xs {
        font-size: 0.75rem;
    }

    .text-light-gray {
        color: #e5e7eb;
    }

    .table thead th {
        border: none;
        letter-spacing: 0.05em;
    }

    .table tbody td {
        border-bottom: 1px solid #f1f5f9;
        padding: 1.25rem 0.5rem;
    }

    /* Button Styling */
    .btn-group .btn {
        border-radius: 8px !important;
        margin-left: 2px;
        margin-right: 2px;
    }

    /* Modal Styling */
    .modal-content {
        border-radius: 15px;
        overflow: hidden;
    }
</style>